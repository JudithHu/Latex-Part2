% \section{Definice a základní vlastnosti obyèejné diferenciální rovnice}

\begin{definice}[obyèejná diferenciální rovnice]\label{def:ODR}
  \textit{Obyèejnou \wtp diferenciální rovnicí\ttp{diferencialni rovnice}\index{diferenciální rovnice}
    prvního øádu rozøe¹enou vzhledem k~\wtp derivaci\ttp{derivace}} (struènì -
  diferenciální rovnicí, DR) s~neznámou $y$ rozumíme rovnici tvaru
  \begin{equation}
    \label{eq:dif-rov-impl}
    y'=\phi(x,y), \tag{R}
  \end{equation}
  kde $\phi$ je funkce dvou promìnných.

  \textit{Øe¹ením\index{øe¹ení!diferenciální rovnice}} (té¾
  \textit{integrálem}\index{integrál!diferenciální rovnice})
  rovnice na intervalu $I$
  rozumíme ka¾dou funkci $y=y(x)$, která je diferencovatelná na $I$ a
  splòuje zde identicky rovnici \eqref{eq:dif-rov-impl}.

  Nech» $x_0$, $y_0$ jsou reálná èísla. Úloha najít øe¹ení rovnice
  \eqref{eq:dif-rov-impl}, které splòuje zadanou \wtp\textit{poèáteèní
    podmínku}\ttp{pocatecni uloha}\index{podmínka!poèáteèní}
  \begin{equation}
    \label{eq:poc-podm}
    y(x_0)=y_0\tag{PP}
  \end{equation}
  se nazývá \textit{poèáteèní} (té¾ \textit{Cauchyova})
  \textit{úloha}\index{úloha!Cauchyova|see{úloha, poèáteèní}}\index{úloha!poèáteèní}.
  Jejím øe¹ením rozumíme
  funkci, která splòuje podmínku \eqref{eq:poc-podm} a je na nìjakém
  intervalu obsahujícím bod $x_0$ øe¹ením rovnice
  \eqref{eq:dif-rov-impl}.

  Øe¹ení Cauchyovy úlohy nazýváme té¾
  \textit{\wtp partikulárním
    øe¹ením\ttp{partikularni reseni}\index{øe¹ení!diferenciální rovnice!partikulární}
    rovnice \eqref{eq:dif-rov-impl}}. Graf
  libovolného partikulárního øe¹ení se nazývá \textit{integrální
  køivka\index{køivka!integrální}}.
\end{definice}


% \begin{umluva}
%   Pod pojmem interval v~celém textu  rozumíme \textit{otevøený
%   interval}, tj. nìkterý z~intervalù typu $(-\infty, \infty)$,
%   $(-\infty, b)$, $(a,b)$, $(a,\infty)$, kde $a$, $b$ jsou reálná
%   èísla.
% \end{umluva}


% \begin{poznamka}
%   Slovnì lze definici DR vyjádøit tak, ¾e obyèejná diferenciální
%   rovnice je vztah (platný v~urèitém oboru) mezi neznámou funkcí a
%   jejími derivacemi. Termín \uv{obyèejná rovnice} znaèí, ¾e hledaná
%   funkce je funkcí jedné promìnné, tj. derivace v~rovnici znaèí
%   obyèejnou derivaci (ne parciální, viz té¾ Dodatek str.
%   \pageref{po:parcialky}).
% \end{poznamka}


\stepwise{
\begin{poznamka}
  Funkce $y(x)$ je podle uvedené definice øe¹ením rovnice
  \eqref{eq:dif-rov-impl} na intervalu
  $I$, jestli¾e
  \begin{itemize}
  \item existuje \wtp derivace\ttp{derivace} $y'(x)$ pro v¹echna $x\in I$,
  \item výraz $\phi(x,y(x))$ je definován pro v¹echna $x\in I$,
  \item rovnice \eqref{eq:dif-rov-impl} platí pro v¹echna $x\in I$.
  \end{itemize}
\end{poznamka}

% 
\dstep
\begin{poznamka}
  Rovnici \eqref{eq:dif-rov-impl} nìkdy uvádíme v~ekvivalentním tvaru
  \begin{equation*}
    \dy=\phi(x,y)\dx,
  \end{equation*}
  který získáme nahrazením derivace $y'$ podílem
  diferenciálù\index{diferenciál}
  $\dy/\dx$ a formálním vynásobením rovnice diferenciálem $\dx$.
\end{poznamka}

\dstep
\begin{poznamka}[obecnìj¹í tvar diferenciální rovnice]
  V~nìkterých aplikacích je nutno pracovat s~obecnìj¹ími
  diferenciálními rovnicemi tvaru
  \begin{equation*}
    \Phi(x,y,y')=0,
  \end{equation*}
  kde $\Phi$ je funkce tøí promìnných taková, ¾e z~rovnice není mo¾né
  explicitnì vypoèítat derivaci $y'$. Takové rovnice nazýváme
  \textit{nerozøe¹ené vzhledem
    k~derivaci\index{diferenciální rovnice!nerozøe¹ená vzhledem k~derivaci}}
  a v~tomto textu se jimi   zabývat nebudeme.
\end{poznamka}
}




\stepwise{
\begin{poznamka}[formulace hlavních problémù]
%   Situace, které mohou nastat pøi øe¹ení diferenciálních rovnic jsou
%   velice rozmanité a je obtí¾né je v¹echny vylo¾it.
  V~souvislosti
  s~diferenciálními rovnicemi nás zajímají pøedev¹ím následující
  otázky
\begin{itemize}
\item Má daná poèáteèní úloha øe¹ení?
\dstep
\item Je toto øe¹ení urèeno jednoznaènì?
\dstep
\item Na jakém intervalu je toto øe¹ení definováno?
\dstep
\item Je mo¾né toto øe¹ení nalézt analytickou cestou? Pokud ano, jak?
\end{itemize}

% Poznamenejme jenom (spí¹e neformálnì, bez velkých nárokù na pøesnost,
% podrobnìj¹í informace lze nalézt napø. v~\cite[kap. 17.2]{Rektorys}),
% ¾e v
\dstep
Vìt¹ina in¾enýrských aplikací vy¾aduje, aby odpovìï na první dvì
otázky byla kladná. Toto je mo¾né zaruèit tehdy, není-li chování funkce
$\phi(x,y)$ vzhledem k~promìnné $y$ \uv{pøíli¹ divoké}. Pøesnìji,
platí následující.
\begin{itemize}
\item Je-li funkce $\phi(x,y)$ \wtp spojitá\ttp{spojitost}, je poèáteèní
  úloha øe¹itelná (Peanova vìta).
\item Má-li funkce $\phi(x,y)$ ohranièenou \wtp parciální\ttp{parcder}
  derivaci podle $y$, je øe¹ení v~nìjakém okolí poèáteèní podmínky
  urèeno jednoznaènì (Picardova vìta).
\end{itemize}
\end{poznamka}
}

